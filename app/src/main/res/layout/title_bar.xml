<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/title_bar">

    <TextView
        android:id="@+id/textView2"
        style="@android:style/TextAppearance.WindowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:clickable="false"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="#000000" />

    <!-- Do this later ...
    <Button
        android:layout_height="24dp"
        android:background="@drawable/ic_load_mod_black_24dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/action_loadmod"
        android:layout_width="36dp"/>
    -->

    <Button
        android:id="@+id/action_print"
        android:background="@drawable/ic_print_black_24dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        />

    <!-- Removed from Below
    android:layout_toLeftOf="@+id/action_help"
    -->

    <Button
        android:id="@+id/action_helpmod"
        android:background="@drawable/ic_module_help_black_24dp"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/action_help"
        android:layout_toEndOf="@+id/action_help"
        android:layout_centerVertical="true"
        />

    <!-- Removed from Below
    android:layout_toLeftOf="@+id/action_menu"
    -->
    <Button
        android:id="@+id/action_help"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:background="@drawable/ic_help_black_24dp" />

    <Button
        android:id="@+id/action_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_settings_applications_black_24dp" />

</RelativeLayout>
